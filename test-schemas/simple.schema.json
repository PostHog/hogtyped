{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "SimpleEvent": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "Name of the item"
        },
        "count": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of items"
        },
        "isActive": {
          "type": "boolean",
          "description": "Whether the item is active"
        }
      },
      "required": ["name", "count"]
    }
  },
  "events": {
    "simple_event": { "$ref": "#/definitions/SimpleEvent" }
  }
}
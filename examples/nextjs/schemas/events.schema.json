{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "PageViewed": {
      "type": "object",
      "properties": {
        "url": {
          "type": "string",
          "format": "uri",
          "description": "Full URL of the page"
        },
        "path": {
          "type": "string",
          "description": "Path portion of the URL"
        },
        "search": {
          "type": "string",
          "description": "Query string parameters"
        },
        "referrer": {
          "type": "string",
          "description": "Referring URL"
        },
        "title": {
          "type": "string",
          "description": "Page title"
        }
      },
      "required": ["url", "path"]
    },
    "UserSignedUp": {
      "type": "object",
      "properties": {
        "userId": {
          "type": "string",
          "description": "Unique user identifier"
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "User's email address"
        },
        "plan": {
          "type": "string",
          "enum": ["free", "starter", "pro", "enterprise"],
          "description": "Selected pricing plan"
        },
        "signupMethod": {
          "type": "string",
          "enum": ["email", "google", "github", "apple"],
          "description": "How the user signed up"
        },
        "timestamp": {
          "type": "string",
          "format": "date-time",
          "description": "When the signup occurred"
        }
      },
      "required": ["userId", "email", "plan"]
    },
    "ButtonClicked": {
      "type": "object",
      "properties": {
        "buttonId": {
          "type": "string",
          "description": "Unique identifier for the button"
        },
        "buttonText": {
          "type": "string",
          "description": "Text displayed on the button"
        },
        "page": {
          "type": "string",
          "description": "Page where button was clicked"
        },
        "component": {
          "type": "string",
          "description": "React component containing the button"
        }
      },
      "required": ["buttonId", "page"]
    },
    "FormSubmitted": {
      "type": "object",
      "properties": {
        "formId": {
          "type": "string",
          "description": "Unique form identifier"
        },
        "formName": {
          "type": "string",
          "description": "Human-readable form name"
        },
        "success": {
          "type": "boolean",
          "description": "Whether submission succeeded"
        },
        "errors": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Any validation errors"
        }
      },
      "required": ["formId", "success"]
    }
  },
  "events": {
    "page_viewed": { "$ref": "#/definitions/PageViewed" },
    "user_signed_up": { "$ref": "#/definitions/UserSignedUp" },
    "button_clicked": { "$ref": "#/definitions/ButtonClicked" },
    "form_submitted": { "$ref": "#/definitions/FormSubmitted" }
  }
}